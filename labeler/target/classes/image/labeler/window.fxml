<BorderPane xmlns="http://javafx.com/javafx/8"
   xmlns:fx="http://javafx.com/fxml/1" fx:controller="image.labeler.Controller">
   <!-- menÃº superior -->
   <top>
      <HBox>
         <MenuBar>
            <Menu text="File">
               <MenuItem text="New" />
               <MenuItem text="Open" />
               <MenuItem text="Save" />
               <MenuItem text="Exit" />
            </Menu>
            <Menu text="Edit">
               <MenuItem text="Cut" />
               <MenuItem text="Copy" />
               <MenuItem text="Paste" />
            </Menu>
            <Menu text="Help">
               <MenuItem text="Usage" />
               <MenuItem text="About" />
            </Menu>
         </MenuBar>
         <Pane HBox.hgrow="ALWAYS" />
         <Button text="Cargar Imagen" fx:id="loadImageButton" onAction="#handleLoadImage"/>
      </HBox>
   </top>

   <!-- panel para arrastrar figuras -->
   <left>
      <VBox spacing="10" style="-fx-padding: 10;">
         <TreeView fx:id="tagTreeView" />
      </VBox>
   </left>

   <!-- canvas que ocupe toda la ventana -->
   <center>
      <Pane fx:id="canvasPane">
         <Canvas fx:id="mainCanvas" />
      </Pane>
   </center>

   <!-- panel inferior de proyectos en la carpeta -->
   <bottom>
      <!-- <Accordion>
